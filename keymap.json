[
  // Global
  {
    "context": "Pane || Workspace || Editor || Menu || Terminal || Assistant || Dock || EmptyPane || SharedScreen || VimControl || vim_mode == normal",
    "bindings": {
      "ctrl-h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-l": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-j": ["workspace::ActivatePaneInDirection", "Down"],
      "alt-p": "pane::TogglePinTab"
    }
  },
  // Project Tree
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "a": "project_panel::NewFile",
      "d": "project_panel::NewDirectory",
      "r": "project_panel::Rename",
      "x": "project_panel::Cut",
      "c": "project_panel::Copy",
      "p": "project_panel::Paste"
    }
  },
  // Editor
  {
    "context": "Editor && (vim_mode === normarl)",
    "bindings": {
      "shift-h": "pane::ActivatePrevItem",
      "shift-l": "pane::ActivateNextItem"
    }
  },
  // Empty Pane
  {
    "context": "EmptyPane",
    "bindings": {
      "space space": "file_finder::Toggle",
      "space f p": "projects::OpenRecent",
      "space /": "pane::DeploySearch"
    }
  },
  // Vim
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !VimWaiting && !menu",
    "bindings": {
      // Assistant
      "space a i": "assistant::InlineAssist",

      // Buffer
      "space b d": "pane::CloseActiveItem",
      "space b i": "pane::CloseInactiveItems",
      "space b b": "tab_switcher::Toggle",

      // Diagnostics
      "space d d": "diagnostics::Deploy",

      // Editor
      "alt-j": "editor::MoveLineDown",
      "alt-k": "editor::MoveLineUp",

      // Files and search
      "space space": "file_finder::Toggle",
      "space f p": "projects::OpenRecent",
      "space /": "pane::DeploySearch",
      "space e": "project_panel::ToggleFocus",

      // Git
      "space g d": "editor::ToggleHunkDiff",
      "space g r": "editor::RevertSelectedHunks",

      // Go to
      "g D": "editor::GoToDefinitionSplit",
      "g i": "editor::GoToImplementation",
      "g I": "editor::GoToImplementationSplit",
      "g t": "editor::GoToTypeDefinition",
      "g T": "editor::GoToTypeDefinitionSplit",
      "g r": "editor::FindAllReferences",

      // LSP
      "space c a": "editor::ToggleCodeActions",
      "space c r": "editor::Rename",

      // Markdown
      "space m p": "markdown::OpenPreview",
      "space m P": "markdown::OpenPreviewToTheSide",

      // Split
      "space s h": "pane::SplitDown",
      "space s H": "pane::SplitUp",
      "space s v": "pane::SplitRight",
      "space s V": "pane::SplitLeft",

      // UI
      "space u i": "editor::ToggleInlayHints",
      "space u b": "editor::ToggleGitBlame",

      // Test
      "space t r": "task::Rerun",
      "space t t": "task::Spawn"
    }
  }
]
