{
  // General
  "features": {
    "edit_prediction_provider": "zed"
  },
  "confirm_quit": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // UI
  "autosave": "on_focus_change",
  "buffer_font_family": "MesloLGM Nerd Font",
  "buffer_font_size": 12,
  "cursor_blink": false,
  "relative_line_numbers": true,
  "soft_wrap": "none",
  "ui_font_family": "MesloLGM Nerd Font",
  "ui_font_size": 13,
  "vertical_scroll_margin": 15,
  "vim_mode": true,
  "experimental.theme_overrides": {
    "border.variant": "#ffffff25",
    "editor.active_line_number": "#748adb",
    "scrollbar.thumb.background": "#70709725",
    "scrollbar.thumb.border": "#70709725",
    "text.accent": "#85AFF3"
  },
  "project_panel": {
    "indent_size": 12
  },
  "icon_theme": "Catppuccin Mocha",
  "theme": {
    "mode": "system",
    "dark": "Catppuccin Mocha",
    "light": "One Light"
  },

  // AI
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "show_edit_predictions": true,

  // LSP & Formatting
  "format_on_save": "prettier",
  "languages": {
    "TypeScript": {
      "enable_language_server": true,
      "show_edit_predictions": true,
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.fixAll.tslint": true,
        "source.fixAll.stylelint": true,
        "source.fixAll.prettier": true,
        "source.fixAll": true
      },
      "prettier": {
        "allowed": true
      },
      "format_on_save": "prettier"
    }
  }
}
